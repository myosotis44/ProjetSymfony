{% extends 'base.html.twig' %}

{% block title %}Reset your password{% endblock %}

{% block body %}
    {% for flash_error in app.flashes('reset_password_error') %}
        <div class="alert alert-danger" role="alert">{{ flash_error }}</div>
    {% endfor %}
    <div class="m-auto col-10 my-5 card p-3 rounded bg-light">
    <h1 class="my-4">Réinitialisation du mot de passe</h1>

    {{ form_start(requestForm) }}
    <div class="col-4">
        {{ form_row(requestForm.mail) }}
    </div>

        <div>
            <small class="h6">
                Entrez votre adresse e-mail et nous vous enverrons
                un lien pour ré-initialiser votre mot de passe.
            </small>
        </div>

        <button class="btn btn-outline-primary mt-3">Envoyer l'email de réinitialisation du mot de passe</button>
    </div>
    {{ form_end(requestForm) }}
{% endblock %}
