{% extends 'base.html.twig' %}

{% block title %}out{% endblock %}

{% block body %}

    <div class="out-container">

        <div class="out-ln1">
            <div class="out-ln1-bl1">
                <div>Date du jour : {{ "now" | date("d/m/Y") }}</div>
                <div>Participant : {{ app.user.userIdentifier }} </div>
            </div>
        </div>

        <div class="out-ln2">

            <h5>Filtrer les sorties</h5>

            {{ form_start(filterForm) }}

            <div class="out_ln2">
                <div class="out_ln2-bl1">
                    {{ form_row(filterForm.outFilterCampus) }}
                    {{ form_row(filterForm.outFilterSearch) }}
                    {{ form_row(filterForm.outFilterStartDate) }}
                    {{ form_row(filterForm.outFilterEndDate) }}
                </div>
                <div class="out_ln2-bl2">
                    {{ form_row(filterForm.outFilterChk) }}
                </div>
                <div class="out_ln2-bl3">
                    <button>Rechercher</button>
                </div>
            </div>

            {{ form_end(filterForm) }}

        </div>

        </div>

        <div class="out-ln3">
            <table>
                <thead>
                    <tr>
                        <th>Nom de la sortie</th>
                        <th>Date de la sortie</th>
                        <th>Clôture</th>
                        <th>Inscrits/Places</th>
                        <th>Etat</th>
                        <th>Inscrit</th>
                        <th>Organisateur</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for i in 0..2 %}
                        <tr>
                            <td>Philo</td>
                            <td>19/07/2018 23:45</td>
                            <td>19/07/2018</td>
                            <td>8/8</td>
                            <td>En cours</td>
                            <td>X</td>
                            <td>Spinoz A.</td>
                            <td>Afficher</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="out-ln4">
            <div class="out-ln4-bl1">
                <button>Créer une sortie</button>
            </div>
        </div>

    </div>

{% endblock %}
