{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="text-center h1">Modifier une sortie</h1>
    <div class="col-10 m-auto my-5">
        {{ form_start(sortieForm) }}
        <div class="row">
            <div class="col-6">
                <div class="row mb-4">
                    <label class="col-5" for="{{ field_name(sortieForm.nom) }}">{{ form_label(sortieForm.nom) }}</label>
                    <div class="col-6">
                        <input type="text"
                               id="{{ field_name(sortieForm.nom) }}"
                               name="{{ field_name(sortieForm.nom) }}"
                               value="{{ field_value(sortieForm.nom) }}"
                               class="form-control"
                        >
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="col-5">
                        {{ form_label(sortieForm.dateHeureDebut) }}
                    </div>
                    <div class="col-6">
                        {{ form_widget(sortieForm.dateHeureDebut) }}
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="col-5">
                        {{ form_label(sortieForm.dateLimiteInscription)}}
                    </div>
                    <div class="col-6">
                        {{ form_widget(sortieForm.dateLimiteInscription) }}
                    </div>
                </div>
                <div class="row mb-4">
                    <label class="col-5" for="{{ field_name(sortieForm.nbInscriptionsMax) }}">{{ form_label(sortieForm.nbInscriptionsMax) }}</label>
                    <div class="col-2">
                        <input type="number"
                               id="{{ field_name(sortieForm.nbInscriptionsMax) }}"
                               name="{{ field_name(sortieForm.nbInscriptionsMax) }}"
                               value="{{ field_value(sortieForm.nbInscriptionsMax) }}"
                               class="form-control text-end"
                        >
                    </div>
                </div>
                <div class="row mb-4">
                    <label class="col-5" for="{{ field_name(sortieForm.duree) }}">{{ form_label(sortieForm.duree) }}</label>
                    <div class="col-2">
                        <input type="number"
                               id="{{ field_name(sortieForm.duree) }}"
                               name="{{ field_name(sortieForm.duree) }}"
                               value="{{ field_value(sortieForm.duree) }}"
                               class="form-control text-end"
                        >
                    </div>
                    <div class="col-4">minutes</div>
                </div>
                <div class="row mb-4">
                    <label class="col-5" for="{{ field_name(sortieForm.infosSortie) }}">{{ form_label(sortieForm.infosSortie) }}</label>
                    <div class="col-7">
                        <textarea
                                id="{{ field_name(sortieForm.infosSortie) }}"
                                name="{{ field_name(sortieForm.infosSortie) }}"
                                rows="5"
                                class="form-control">
                            {{ field_value(sortieForm.infosSortie) }}
                        </textarea>
                    </div>
                </div>
            </div>

            <div class="col-6 mb-4">
                <div class="row mb-4">
                    <div class="col-5">
                        {{ form_label(sortieForm.campus) }}
                    </div>
                    <div class="col-7">
                        {{ form_widget(sortieForm.campus) }}
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="col-5">
                        {{ form_label(sortieForm.ville) }}
                    </div>
                    <div class="col-7">
                        {{ form_widget(sortieForm.ville) }}
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="col-5">
                        {{ form_label(sortieForm.lieu) }}
                    </div>
                    <div class="col-7">
                        {{ form_widget(sortieForm.lieu) }}
                    </div>
                </div>
            </div>
        </div>

        <div class="row justify-content-center">
            <div class="col-1"></div>
                <div class="col-3">
                    {{ form_widget(sortieForm.bntEnregistrer) }}
                </div>
                <div class="col-3">
                    {{ form_widget(sortieForm.bntPublier) }}
                </div>
                <div class="col-3">
                    {{ form_widget(sortieForm.bntSupprimer) }}
                </div>
                <div class="col-2">
                    {{ form_widget(sortieForm.btnAnnuler) }}
                </div>
        </div>

        {{ form_end(sortieForm) }}

    </div>
{% endblock %}

{% block title %}

{% endblock %}
