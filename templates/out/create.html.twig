{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="text-center h1">Créer une sortie</h1>
    <div class="col-10 m-auto my-5" id="idForm">
        {{ form_start(sortieForm) }}
        <div class="row">
            <div class="col-6">
                <div class="row mb-4">
                    <label class="col-5" for="{{ field_name(sortieForm.nom) }}">Nom de la sortie: </label>
                    <div class="col-6">
                        <input type="text"
                               id="{{ field_name(sortieForm.nom) }}"
                               name="{{ field_name(sortieForm.nom) }}"
                               value="{{ field_value(sortieForm.nom) }}"
                               class="form-control"
                        >
                    </div>
                </div>
                <div class="row mb-4">
                    <label class="col-5" for="{{ field_name(sortieForm.dateHeureDebut) }}">Date et heure de la sortie: </label>
                    <div class="col-6">
                        <input type="datetime-local"
                               id="{{ field_name(sortieForm.dateHeureDebut) }}"
                               name="{{ field_name(sortieForm.dateHeureDebut) }}"
                               value="{{ "now"|date('Y-m-d\\Th:i') }}"
                               max="{{ "now"|date_modify("+2 years")|date('Y-m-d\\Th:i') }}"
                               class="form-control"
                        >
                    </div>
                </div>
                <div class="row mb-4">
                    <label class="col-5" for="{{ field_name(sortieForm.dateLimiteInscription) }}">Date limite d'inscription: </label>
                    <div class="col-6">
                        <input type="datetime-local"
                               id="{{ field_name(sortieForm.dateLimiteInscription) }}"
                               name="{{ field_name(sortieForm.dateLimiteInscription) }}"
                               value="{{ "now"|date_modify("+7 days")|date('Y-m-d\\Th:i') }}"
                               min="{{ "now"|date_modify("+1 day")|date('Y-m-d\\Th:i') }}"
                               max="{{ "now"|date_modify("+2 years")|date('Y-m-d\\Th:i') }}"
                               class="form-control"
                        >
                    </div>
                </div>
                <div class="row mb-4">
                    <label class="col-5" for="{{ field_name(sortieForm.nbInscriptionsMax) }}">Nombre de places: </label>
                    <div class="col-3">
                        <input type="number"
                               id="{{ field_name(sortieForm.nbInscriptionsMax) }}"
                               name="{{ field_name(sortieForm.nbInscriptionsMax) }}"
                               value="10"
                               class="form-control text-end"
                        >
                    </div>
                </div>
                <div class="row mb-4">
                    <label class="col-5" for="{{ field_name(sortieForm.duree) }}">Durée: </label>
                    <div class="col-3">
                        <input type="number"
                               id="{{ field_name(sortieForm.duree) }}"
                               name="{{ field_name(sortieForm.duree) }}"
                               value="60"
                               class="form-control text-end"
                        >
                    </div>
                    <div class="col-4">minutes</div>
                </div>
                <div class="row mb-4">
                    <label class="col-5" for="{{ field_name(sortieForm.infosSortie) }}">Descriptions et infos: </label>
                    <div class="col-7">
                        <textarea
                               id="{{ field_name(sortieForm.infosSortie) }}"
                               name="{{ field_name(sortieForm.infosSortie) }}"
                               rows="5"
                               class="form-control">
                        </textarea>
                    </div>
                </div>
            </div>

            <div class="col-6 mb-4">
                <div class="row mb-4">
                    <div class="col-5">
                    {{ form_label(sortieForm.campus) }}
                    </div>
                    <div class="col-7">
                        {{ form_widget(sortieForm.campus) }}
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="col-5">
                        {{ form_label(sortieForm.ville) }}
                    </div>
                    <div class="col-7">
                        {{ form_widget(sortieForm.ville) }}
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="col-5">
                        {{ form_label(sortieForm.lieu) }}
                    </div>
                    <div class="col-7">
                        {{ form_widget(sortieForm.lieu) }}
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="col-5">
                        {{ form_label(sortieForm.rue) }}
                    </div>
                    <div class="col-7">
                        {{ form_widget(sortieForm.rue) }}
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="col-5">
                        {{ form_label(sortieForm.codePostal) }}
                    </div>
                    <div class="col-3">
                        {{ form_widget(sortieForm.codePostal) }}
                    </div>
                    <div class="col-4">
                        <!-- Button trigger modal -->
                        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal">
                            +
                        </button>
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="col-5">
                        {{ form_label(sortieForm.latitude) }}
                    </div>
                    <div class="col-7">
                        {{ form_widget(sortieForm.latitude) }}
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="col-5">
                        {{ form_label(sortieForm.longitude) }}
                    </div>
                    <div class="col-7">
                        {{ form_widget(sortieForm.longitude) }}
                    </div>
                </div>
            </div>
        </div>
        <div class="row justify-content-center">
            <div class="col-1"></div>
            <div class="col-3">
                {{ form_widget(sortieForm.bntEnregistrer) }}
            </div>
            <div class="col-3">
                {{ form_widget(sortieForm.bntPublier) }}
            </div>
            <div class="col-3">
                {{ form_widget(sortieForm.btnAnnuler) }}
            </div>
        </div>
        {{ form_end(sortieForm) }}
    </div>

    <!-- Modal -->
    <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="exampleModalLabel">Création d'un lieu</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <div class="col-10 m-auto">
                        {{ form_start(lieuForm) }}
                        <div class="row">
                            <div class="col-6">
                                {{ form_label(lieuForm.nom) }}
                                {{ form_widget(lieuForm.nom) }}
                            </div>
                            <div class="col-6">
                                {{ form_label(lieuForm.ville) }}
                                {{ form_widget(lieuForm.ville) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-12">
                                {{ form_label(lieuForm.rue) }}
                                {{ form_widget(lieuForm.rue) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-6">
                                {{ form_label(lieuForm.longitude) }}
                                {{ form_widget(lieuForm.longitude) }}
                            </div>
                            <div class="col-6">
                                {{ form_label(lieuForm.latitude) }}
                                {{ form_widget(lieuForm.latitude) }}
                            </div>
                        </div>
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-success">Créer</button>
                </div>
                {{ form_end(lieuForm) }}
            </div>
        </div>
    </div>
{% endblock %}

{% block title %}

{% endblock %}
{% block xtraJS %}
    <script
            src="https://code.jquery.com/jquery-3.6.0.min.js"
            integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4="
            crossorigin="anonymous"></script>
    <script src="{{ asset('js/sortie.js')}}"></script>
{% endblock %}
